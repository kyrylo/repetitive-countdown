{
  "name": "Repetitive Countdown",
  "version": "0.1.0",
  "manifest_version": 4,

  "description": "The timer contains two phases: main countdown and timeout.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/icon20.png",
    "default_popup": "popup.html",
    "default_title": "Repetitive Countdown"
  },

  "background": {
    "page": "background.html"
  },
  "permissions": [
    "notifications"
  ],

  "offline_enabled": true
}
